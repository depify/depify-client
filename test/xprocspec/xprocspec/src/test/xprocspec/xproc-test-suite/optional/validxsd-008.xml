<?xml-stylesheet type="text/xsl" href="/style/testcase.xsl"?>
<t:test xmlns:t="http://xproc.org/ns/testsuite"
        xmlns:p="http://www.w3.org/ns/xproc"
        xmlns:c="http://www.w3.org/ns/xproc-step"
        xmlns:err="http://www.w3.org/ns/xproc-error"
	ignore-whitespace-differences="true">

<t:title>Test validxsd-008</t:title>

<t:pipeline>
<p:declare-step version='1.0' name="pipeline">
<p:output port="result"/>

<p:validate-with-xml-schema use-location-hints="true">
  <p:input port="source">
    <p:document href="http://tests.xproc.org/tests/doc/document2.xml"/>
  </p:input>
  <p:input port="schema">
    <p:empty/>
  </p:input>
</p:validate-with-xml-schema>

</p:declare-step>
</t:pipeline>

<t:output port='result'>
<doc xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:noNamespaceSchemaLocation="document.xsd">
  <p>This is a test document</p>
</doc></t:output>

</t:test>

