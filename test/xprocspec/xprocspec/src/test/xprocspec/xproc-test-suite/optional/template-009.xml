<?xml-stylesheet type="text/xsl" href="/style/testcase.xsl"?>
<t:test xmlns:t="http://xproc.org/ns/testsuite"
        xmlns:p="http://www.w3.org/ns/xproc"
        xmlns:c="http://www.w3.org/ns/xproc-step"
        xmlns:err="http://www.w3.org/ns/xproc-error">

<t:title>Test p:template-009</t:title>

<t:input port='source'>
<doc>
<p>A para.</p>
</doc>
</t:input>

<t:option name="opt" value="value"/>

<t:pipeline>
<p:pipeline version='1.0' name="main">
<p:option name="opt" select="'default-opt-value'"/>
<p:variable name="v1" select="'v1'"/>
<p:variable name="v2" select="'v2'"/>

<p:in-scope-names name="vars"/>

<p:template>
  <p:input port="template">
    <p:inline>
      <template v1="{$v1}" v2="{$v2}" opt="{$opt}"/>
    </p:inline>
  </p:input>
  <p:input port="source">
    <p:pipe step="main" port="source"/>
  </p:input>
  <p:input port="parameters">
    <p:pipe step="vars" port="result"/>
  </p:input>
</p:template>

</p:pipeline>
</t:pipeline>

<t:output port='result'>
  <template v1="v1" v2="v2" opt="value"/>
</t:output>

</t:test>

