<?xml-stylesheet type="text/xsl" href="/style/testcase.xsl"?>
<t:test xmlns:t="http://xproc.org/ns/testsuite"
        xmlns:p="http://www.w3.org/ns/xproc"
        xmlns:c="http://www.w3.org/ns/xproc-step"
        xmlns:err="http://www.w3.org/ns/xproc-error">

<t:title>Serialization test include-content-type #001</t:title>

<t:pipeline>
<p:declare-step version='1.0' name="main">
  <p:input port="source">
    <p:document href="../doc/xhtml-ct.html"/>
  </p:input>
  <p:output port="uri"/>

  <p:store href="file:///tmp/include-content-type-001.html"
	   escape-uri-attributes="true" method="xhtml"
           media-type="application/xhtml+xml"
	   include-content-type="true" encoding="iso-8859-1"/>

  <p:string-replace match="c:result/text()">
    <p:input port="source">
      <p:inline><c:result>uri</c:result></p:inline>
    </p:input>
    <p:with-option name="replace"
		   select="concat('&quot;',p:base-uri(/),'&quot;')">
      <p:pipe step="main" port="source"/>
    </p:with-option>
  </p:string-replace>

</p:declare-step>
</t:pipeline>

<t:compare-pipeline>
<p:declare-step name="main" version="1.0">
<p:input port="uri"/>
<p:output port="result"/>

<p:exec name="diff"
	command="serdiff"
	source-is-xml="false"
	result-is-xml="false">
  <p:input port="source"><p:empty/></p:input>
  <p:with-option name="args"
	         select="concat('/tmp/include-content-type-001.html ',
			        p:resolve-uri('../serialization/results/include-content-type-001.html',
                                              /c:result))">
    <p:pipe step="main" port="uri"/>
  </p:with-option>
</p:exec>

<p:sink/>

<p:identity>
  <p:input port="source">
    <p:pipe step="diff" port="exit-status"/>
  </p:input>
</p:identity>

</p:declare-step>
</t:compare-pipeline>

<t:output port="result"><c:result>0</c:result></t:output>

</t:test>

